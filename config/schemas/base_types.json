{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "base_types.json",
  "title": "Base Type Definitions for Structured Report Processing",
  "definitions": {
    "ReportMetadata": {
      "type": "object",
      "properties": {
        "processor_version": {
          "type": "string",
          "description": "Version of the structured report processor"
        },
        "processing_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the processing was performed"
        },
        "input_file": {
          "type": "string",
          "description": "Path to the input report file"
        },
        "schema_name": {
          "type": "string",
          "description": "Name of the schema used for extraction"
        },
        "model_used": {
          "type": "string",
          "description": "OpenAI model used for processing"
        }
      },
      "required": ["processor_version", "processing_timestamp", "input_file", "schema_name"]
    },
    "ExtractionInfo": {
      "type": "object",
      "properties": {
        "total_characters_processed": {
          "type": "integer",
          "minimum": 0
        },
        "extraction_method": {
          "type": "string",
          "enum": ["openai_api", "cached", "fallback"]
        },
        "cache_hit": {
          "type": "boolean"
        },
        "processing_time_seconds": {
          "type": "number",
          "minimum": 0
        },
        "api_cost_estimate_usd": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "BaseEntity": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type classification of the entity"
        },
        "name": {
          "type": "string",
          "description": "Short descriptive name of the entity"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score of the extraction (0-1)"
        },
        "source_location": {
          "type": "string",
          "description": "Location in source where entity was found"
        }
      },
      "required": ["type", "name"]
    },
    "ContactInfo": {
      "type": "object",
      "properties": {
        "email": {
          "type": ["string", "null"],
          "format": "email"
        },
        "phone": {
          "type": ["string", "null"],
          "pattern": "^[+]?[0-9\\s\\-\\(\\)]+$"
        },
        "address": {
          "type": ["string", "null"]
        },
        "website": {
          "type": ["string", "null"],
          "format": "uri"
        }
      }
    },
    "MonetaryValue": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "currency": {
          "type": "string",
          "default": "USD",
          "enum": ["RUB", "USD", "EUR", "KGS", "GBP", "JPY"]
        }
      },
      "required": ["amount"]
    },
    "DateRange": {
      "type": "object",
      "properties": {
        "start_date": {
          "type": ["string", "null"],
          "format": "date"
        },
        "end_date": {
          "type": ["string", "null"],
          "format": "date"
        }
      }
    }
  }
}